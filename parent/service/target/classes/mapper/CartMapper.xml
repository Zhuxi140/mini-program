<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhuxi.mapper.CartMapper">
    <update id="updateQuantityOrSpec">
        UPDATE cart
        <set>
            <if test="cUDto.quantity != null">
                quantity = quantity + #{cUDto.quantity},
            </if>
            <if test="cUDto.specId != null">
                spec_id = #{cUDto.specId},
            </if>
        </set>
        WHERE id = #{cUDto.cartId} AND user_id = #{userId}
    </update>



</mapper>