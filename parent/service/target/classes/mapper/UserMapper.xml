<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhuxi.mapper.UserMapper">
    <select id="getListUser" resultType="src.main.java.com.zhuxi.pojo.VO.AdminUserVO">
        SELECT
            id,
            phone,
            nickname,
            wx_nickname,
            wx_avatar_url,
            custom_avatar_oss,
            status
        FROM user
        WHERE id > #{lastId}
        ORDER BY id,created_at DESC
        LIMIT #{pageSize}
    </select>


    <update id="updateUser" parameterType="src.main.java.com.zhuxi.pojo.DTO.UserUpdateDTO">
        UPDATE user
        <set>
            <if test="nickName != null">
                nickname = #{nickName},
            </if>
            <if test="customAvatarOss != null">
                custom_avatar_oss = #{customAvatarOss},
            </if>
        </set>
        WHERE id = #{id}
    </update>
</mapper>