<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhuxi.mapper.ProductMapper">
    <select id="getListProducts"  resultType="src.main.java.com.zhuxi.pojo.VO.Product.ProductOverviewVO">
    <![CDATA[
        SELECT
            id,
            name,
            price,
            cover_url
        FROM product
        WHERE id < #{lastId} AND status = 1
        ORDER BY id DESC,created_at DESC
        LIMIT #{pageSize}
    ]]>
    </select>

    <select id="getListAdminProductsDESC" resultType="src.main.java.com.zhuxi.pojo.VO.Admin.AdminProductVO">
     <![CDATA[
        SELECT
            id,
            name,
            price,
            stock,
            stock_status
        FROM product_stock_status
        WHERE id < #{lastId}
        ORDER BY id DESC
        ]]>
    </select>


    <select id="getListAdminProductsASC" resultType="src.main.java.com.zhuxi.pojo.VO.Admin.AdminProductVO">
        SELECT
            id,
            name,
            price,
            stock,
            stock_status
        FROM product_stock_status
        WHERE id > #{lastId}
        ORDER BY id ASC
    </select>

    <update id="updateProduct" parameterType="src.main.java.com.zhuxi.pojo.DTO.product.ProductUpdateDTO">
        UPDATE product
        <set>
            <if test="productUpdateDTO.name != null">
                name = #{productUpdateDTO.name},
            </if>
            <if test="productUpdateDTO.price != null">
                price = #{productUpdateDTO.price},
            </if>
            <if test="productUpdateDTO.coverUrl != null">
                cover_url = #{productUpdateDTO.coverUrl},
            </if>
            <if test="productUpdateDTO.images != null">
                images = #{productUpdateDTO.images,typeHandler=com.zhuxi.handler.TypeHandler},
            </if>
            <if test="productUpdateDTO.description != null">
                description = #{productUpdateDTO.description},
            </if>
            <if test="productUpdateDTO.stock != null">
                stock = #{productUpdateDTO.stock},
            </if>
            <if test="productUpdateDTO.origin != null">
                origin = #{productUpdateDTO.origin},
            </if>
            <if test="productUpdateDTO.status != null">
                status = #{productUpdateDTO.status},
            </if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>